@model SiteSettings

<h2>Site Ayarları</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form method="post">
    <div class="form-group">
        <label>Site İsmi</label>
        <input class="form-control" name="SiteName" value="@Model.SiteName" />
    </div>

    <div class="form-group">
        <label>Şirket Telefon</label>
        <input class="form-control" name="CompanyPhone" value="@Model.CompanyPhone" />
    </div>

    <div class="form-group">
        <label>Şirket Email</label>
        <input class="form-control" name="CompanyEmail" value="@Model.CompanyEmail" />
    </div>

    <button class="btn btn-primary mt-3">Kaydet</button>
</form>
