@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Admin Paneline Hoşgeldiniz</h2>
<p class="text-muted">Sol menüden işlemleri seçebilirsiniz.</p>

<div class="row mt-4">

    <div class="col-md-4">
        <div class="card text-bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Toplam Marka</h5>
                <p class="card-text">@ViewBag.BrandCount adet</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Toplam Araç</h5>
                <p class="card-text">@ViewBag.CarCount adet</p>
            </div>
        </div>
    </div>

</div>
