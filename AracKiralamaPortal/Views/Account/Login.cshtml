@model AracKiralamaPortal.ViewModels.LoginViewModel
<div style="width:30%; justify-self:center;">
<h2>Giriş Yap</h2>

<form asp-action="Login" method="post" id="loginForm">

    <div class="form-group">
        <label>Kullanıcı Adı veya Email</label>
        <input asp-for="UsernameOrEmail" class="form-control" />
    </div>

    <div class="form-group position-relative">
        <label>Şifre</label>

        <input asp-for="Password" type="password" class="form-control" id="loginPassword" />

        <!-- Göz ikonu -->
        <span id="toggleLoginPassword"
              style="position:absolute; right:10px; top:38px; cursor:pointer;">
            <i class="fa-solid fa-eye"></i>
        </span>
    </div>

    <button class="btn btn-primary mt-3" type="submit">Giriş Yap</button>

    <div class="text-danger mt-2">
        @Html.ValidationSummary(false)
    </div>
    @if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
</form>
</div>

@section Scripts {
    <script>
        const loginPwd = document.getElementById("loginPassword");
        const togglePwd = document.getElementById("toggleLoginPassword");

        togglePwd.addEventListener("click", function () {
            const type = loginPwd.getAttribute("type") === "password" ? "text" : "password";
            loginPwd.setAttribute("type", type);

            this.innerHTML = type === "password"
                ? '<i class="fa-solid fa-eye"></i>'
                : '<i class="fa-solid fa-eye-slash"></i>';
        });
    </script>
}
