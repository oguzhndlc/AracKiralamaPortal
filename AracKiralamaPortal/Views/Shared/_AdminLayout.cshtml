@using Microsoft.AspNetCore.Identity
@using AracKiralamaPortal.Models
@inject UserManager<ApplicationUser> UserManager

@{
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="icon" type="image/png" href="~/caricon.png">

    <link href="~/admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/admin/css/sb-admin-2.min.css" rel="stylesheet" />

    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/admin_layout.css" rel="stylesheet" asp-append-version="true" />

    <style>
        body.dark-theme-body {
            background: #0b0f1a;
            color: #e5e7eb;
        }

        .admin-sidebar-dark {
            background: #111827;
            border-right: 1px solid rgba(0,245,255,0.2);
        }

            .admin-sidebar-dark .nav-link {
                color: #9ca3af;
                transition: all 0.3s ease;
            }

                .admin-sidebar-dark .nav-link:hover {
                    color: #00f5ff;
                    text-shadow: 0 0 10px rgba(0,245,255,0.5);
                }

            .admin-sidebar-dark .sidebar-brand {
                color: #00f5ff;
                font-weight: 700;
                font-size: 1.2rem;
            }

            .admin-sidebar-dark .sidebar-divider {
                border-color: rgba(0,245,255,0.2);
            }

            .admin-sidebar-dark .sidebar-heading {
                color: #00f5ff;
                text-transform: uppercase;
                font-size: 0.75rem;
                letter-spacing: 1px;
            }

        .admin-topbar-dark {
            background: #111827;
            border-bottom: 1px solid rgba(0,245,255,0.2);
        }

            .admin-topbar-dark .navbar-nav .nav-link {
                color: #e5e7eb;
            }

                .admin-topbar-dark .navbar-nav .nav-link:hover {
                    color: #00f5ff;
                    text-shadow: 0 0 8px #00f5ff;
                }

        .admin-main-content {
            padding: 20px;
        }

        .sticky-footer {
            background: #111827;
            color: #9ca3af;
            border-top: 1px solid rgba(0,245,255,0.2);
        }

        .scroll-to-top {
            background: #00f5ff;
            color: #111827;
            transition: all 0.3s ease;
        }

            .scroll-to-top:hover {
                background: #0ff;
                color: #111827;
                box-shadow: 0 0 15px #00f5ff;
            }

        .btn {
            border-radius: 999px;
            transition: 0.3s;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 0 15px #00f5ff;
            }
    </style>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>


<body id="page-top" class="dark-theme-body">
    <input type="hidden" id="currentUserId"
           value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />
    <input type="hidden" id="currentUserName"
           value="@User.Identity?.Name" />

    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat-realtime.js"></script>

    <div class="toast-container"></div>
    <div id="wrapper">

        <ul class="navbar-nav admin-sidebar-dark sidebar accordion" id="accordionSidebar">

            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-controller="Admin" asp-action="Dashboard">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-car"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Arac Panel</div>
            </a>

            <hr class="sidebar-divider my-0">

            <li class="nav-item">
                <a class="nav-link" asp-action="Dashboard" asp-controller="Admin">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <hr class="sidebar-divider">

            <div class="sidebar-heading">Yönetim</div>
            
            <li class="nav-item">
                <a class="nav-link" asp-controller="Car" asp-action="Index">
                    <i class="fas fa-car"></i>
                    <span>Araçlar</span>
                </a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link" asp-controller="Brand" asp-action="Index">
                    <i class="fas fa-warehouse"></i>
                    <span>Markalar</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Reservations">
                    <i class="fas fa-warehouse"></i>
                    <span>Rezervasyonlar</span>
                </a>
            </li>

            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminSettings" asp-action="Index">
                        <i class="fas fa-cog"></i>
                        <span>Site Ayarları</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Users">
                        <i class="fas fa-users-cog"></i> <span>Kullanıcı Ayarları</span>
                    </a>
                </li>
            }

            <!--<li class="nav-item">
                <a class="nav-link" asp-controller="Admin" asp-action="Messages">
                    <i class="fa-solid fa-message"></i> <span>Sohbetler</span>
                </a>
            </li>-->

            <hr class="sidebar-divider d-none d-md-block">

            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>

        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">

                <nav class="admin-topbar-dark navbar navbar-expand navbar-light topbar mb-4 shadow-sm">

                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars text-white"></i>
                    </button>

                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home fa-sm fa-fw mr-2"></i>
                                Siteye Git
                            </a>
                        </li>
                    </ul>

                </nav>

                <div class="container-fluid admin-main-content">
                    @RenderBody()
                </div>

            </div>

        </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <script src="~/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/admin/js/sb-admin-2.min.js"></script>
    <script src="~/js/site.js"></script>

    @if (TempData["ToastErrors"] != null || TempData["ToastSuccess"] != null)
    {
        <script>
            showTempDataToasts(
                @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["ToastErrors"] ?? new List<string>())),
                @Html.Raw(System.Text.Json.JsonSerializer.Serialize(TempData["ToastSuccess"] ?? ""))
            );
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
