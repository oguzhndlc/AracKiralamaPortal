@using AracKiralamaPortal.Models
@using AracKiralamaPortal.ViewModels

@inject SiteSettingsService SettingsService
@{
    var settings = SettingsService.GetSettings();
    string currentPath = Context.Request.Path.Value;
    bool isAdminPage = currentPath.StartsWith("/Admin", StringComparison.OrdinalIgnoreCase);
    bool isCarPage = currentPath.StartsWith("/Car", StringComparison.OrdinalIgnoreCase);
    bool isBrandPage = currentPath.StartsWith("/Brand", StringComparison.OrdinalIgnoreCase);
    bool isSignPage = currentPath.StartsWith("/Account", StringComparison.OrdinalIgnoreCase);
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@settings.siteName</title>
    <link rel="icon" type="image/png" href="~/caricon.png">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-Sd...==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom mb-3 shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">@settings.siteName</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active-link" : "")"
                               asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active-link" : "")"
                               asp-controller="Home" asp-action="About">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active-link" : "")"
                               asp-controller="Reservation" asp-action="MyReservations">Rezervasyonlarım</a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active-link" : "")"
                                   asp-controller="Admin"
                                   asp-action="Dashboard">
                                    Yönetici Paneli
                                </a>
                            </li>
                        }

                    </ul>

                    <ul class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button" data-toggle="dropdown">
                                    @{
                                        var profileImage = User.Claims
                                        .FirstOrDefault(c => c.Type == "ProfileURL")?.Value
                                        ?? "/images/profiles/default.png";
                                    }
                                    <div class="d-flex align-items-center">
                                        <span class="mr-2">@User.Identity.Name</span>
                                        
                                        <img src=@profileImage  
                                             class="rounded-circle"
                                             style="width:36px;height:36px;object-fit:cover;" />
                                    </div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right shadow">
                                    <a class="dropdown-item custom-item profile-item" asp-controller="Account" asp-action="Profile">
                                        <i class="fas fa-user fa text-gray-300"></i> &nbsp;&nbsp; Profil
                                    </a>
                                    <a class="dropdown-item custom-item logout-item" href="javascript:void(0)" onclick="ajaxLogout()">
                                        <i class="fas fa-sign-out-alt mr-2"></i> Çıkış Yap
                                    </a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown">
                                    <i class="fas fa-user fa-2x text-gray-300"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right shadow">
                                    <a class="dropdown-item custom-item login-item" asp-controller="Account" asp-action="Login">
                                        <i class="fas fa-sign-in-alt fa-sm fa-fw mr-2"></i> Giriş Yap
                                    </a>
                                    <a class="dropdown-item custom-item register-item" asp-controller="Account" asp-action="Register">
                                        <i class="fas fa-user-plus fa-sm fa-fw mr-2"></i> Kayıt Ol
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @if (isAdminPage||isCarPage||isBrandPage||isSignPage)
    {
        <main role="main">
            @RenderBody()
        </main>
    }else{
        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    }
    
     
    <footer>
        <footer>
            <div class="social-icons">
                @if (@settings.igOK)
                {
                    <a href="@settings.igLink" target="_blank">
                        <i class="fa-brands fa-square-instagram"></i>
                    </a>
                }
                @if (@settings.xOK)
                {
                    <a href="@settings.xLink" target="_blank">
                        <i class="fa-brands fa-square-x-twitter"></i>
                    </a>
                }
                @if (@settings.fbOK)
                {
                    <a href="@settings.fbLink" target="_blank">
                        <i class="fa-brands fa-square-facebook"></i>
                    </a>
                }
                @if (@settings.ytOK)
                {
                    <a href="@settings.ytLink" target="_blank">
                        <i class="fa-brands fa-square-youtube"></i>
                    </a>
                }
            </div>
        </footer>

        <strong>
            2025 © Tüm hakları saklıdır - @settings.companyEmail
        </strong>
        <strong>Telefon: @settings.companyPhone</strong>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @if (User.Identity.IsAuthenticated)
    {
        <input type="hidden" id="currentUserId" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value" />
        <input type="hidden" id="currentUserName" value="@User.Identity.Name" />
    }
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
    <div class="toast-container"></div>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
