@inject SiteSettingsService SettingsService
@{
    var settings = SettingsService.GetSettings();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="~/caricon.png">

    <title>@settings.SiteName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-Sd...==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom mb-3 shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">@settings.SiteName</a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Dashboard">Yönetici Paneli</a>
                            </li>
                        }
                    </ul>

                    <!-- USER MENU -->
                    <div>
                        <ul class="navbar-nav ml-auto">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li class="nav-item dropdown">
                                    <a style="background-color:lightgray; border-radius:30px; display:flex;  align-items:center;" class="nav-link dropdown-toggle" href="#" id="userMenu"
                                       role="button" data-toggle="dropdown">
                                        <span style="margin-left:5px; margin-right:10px;" class="ml-1">@User.Identity.Name</span>
                                        <i style="margin-left:10px; margin-right:5px;" class="fas fa-user fa-2x text-gray-300"></i>
                                    </a>

                                    <div class="dropdown-menu dropdown-menu-right shadow">
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                            <i class="fas fa-sign-out-alt mr-2"></i> Çıkış Yap
                                        </a>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown no-arrow">
                                    <a style="background-color:lightgray; border-radius:30px; display:flex;  align-items:center;" class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                       data-toggle="dropdown">
                                        <i style="margin-left:10px;" class="fas fa-user fa-2x text-gray-300"></i>
                                    </a>

                                    <div class="dropdown-menu dropdown-menu-right shadow">
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Login">
                                            <i class="fas fa-sign-in-alt fa-sm fa-fw mr-2"></i>
                                            Giriş Yap
                                        </a>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Register">
                                            <i class="fas fa-user-plus fa-sm fa-fw mr-2"></i>
                                            Kayıt Ol
                                        </a>
                                    </div>
                                </li>

                            }

                        </ul>
                    </div>
                   

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2025 - @settings.CompanyEmail
        </div>
    </footer>

    <!-- DOĞRU SCRIPTLER (Bootstrap 4 + jQuery) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
