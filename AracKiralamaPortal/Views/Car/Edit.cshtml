@model AracKiralamaPortal.Models.Car

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">

    <h3>Araç Düzenle</h3>

    <form method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label>Model</label>
            <input asp-for="Model" class="form-control" />
        </div>

        <div class="form-group">
            <label>Yıl</label>
            <input asp-for="Year" class="form-control" />
        </div>

        <div class="form-group">
            <label>Fiyat</label>
            <input asp-for="Price" class="form-control" />
        </div>

        <div class="form-group">
            <label>Marka</label>
            <select asp-for="BrandId" class="form-control">
                @foreach (var brand in ViewBag.Brands)
                {
                    <option value="@brand.Id">@brand.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label>Araç Durumu</label>
            <select asp-for="isAvailable" class="form-control">
                <option value="true">Müsait</option>
                <option value="false">Müsait Değil</option>
            </select>
        </div>

        <div class="form-group mt-3">
            <label>Mevcut Resim</label><br />
            @if (Model.ImagePath != null)
            {
                <img src="@Model.ImagePath" width="150" />
            }
            else
            {
                <p class="text-muted">Resim yok</p>
            }
        </div>

        <div class="form-group mt-2">
            <label>Yeni Resim Yükle</label>
            <input type="file" name="imageFile" class="form-control" />
        </div>

        <button class="btn btn-primary mt-3">Kaydet</button>
    </form>

</div>
