@inject SiteSettingsService SettingsService
@{
    var settings = SettingsService.GetSettings();
    ViewData["Title"] = "Ana Sayfa";
}
@model List<AracKiralamaPortal.Models.Car>

<link href="~/css/site.css" rel="stylesheet" />
<link href="~/css/home.css" rel="stylesheet" />

<h2 class="mb-4 text-light">Araç Filomuz</h2>

<div class="row row-equal-height">
    @foreach (var car in Model)
    {
        if (car.isAvailable)
        {
            <div class="col-md-4 mb-4 d-flex">
                <div class="car-card glass-card flex-fill">

                    <div class="availability">Müsait</div>

                    <div class="car-title">
                        @car.Brand?.Name @car.Model
                    </div>

                    <div class="car-image">
                        <img src="@car.ImagePath" alt="Araç">
                    </div>

                    <div class="car-features">
                        <span>🚘 @car.GearType</span>
                        <span>⛽ @car.FuelType</span>
                        <span> @(car.HasAC ? "❄️ Klima" : "❌ Klima")</span>
                        <span> @(car.HasGPS ? "🧭 GPS" : "❌ GPS")</span>
                    </div>

                    <div class="car-footer">
                        <div class="car-price">
                            @car.Price ₺ <span>/gün</span>
                        </div>
                        <a href="#" class="rent-btn">Hemen Kirala</a>
                    </div>

                </div>
            </div>
        }
    }
</div>
