@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .chat-container {
        display: flex;
        height: 85vh;
        max-width: 1200px;
        margin: 20px auto;
        background: #f0f2f5;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        font-family: 'Segoe UI', sans-serif;
    }

    .sidebar {
        width: 280px;
        background: #1f2c3a;
        color: white;
        display: flex;
        flex-direction: column;
    }

    .sidebar-header {
        padding: 15px;
        font-weight: bold;
        background: #16202b;
        text-align: center;
    }

    .user-list {
        list-style: none;
        padding: 10px;
        margin: 0;
        overflow-y: auto;
    }

        .user-list li {
            padding: 12px;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.2s;
        }

            .user-list li:hover {
                background: #2c3e50;
            }

    .chat-panel {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .chat-header {
        padding: 15px;
        background: #4CAF50;
        color: white;
    }

    .chat-messages {
        flex: 1;
        padding: 15px;
        overflow-y: auto;
        background: linear-gradient(gray, lightgray);
    }

    .message {
        max-width: 65%;
        padding: 10px 14px;
        margin-bottom: 10px;
        border-radius: 18px;
        font-size: 14px;
        line-height: 1.4;
        word-break: break-word;
    }

        .message.me {
            background: #4CAF50;
            color: white;
            margin-left: auto;
            border-bottom-right-radius: 4px;
            border-bottom-left-radius: 18px;
        }

        .message.other {
            background: white;
            color: #333;
            margin-right: auto;
            border-bottom-left-radius: 4px;
            border-bottom-right-radius: 18px;
        }

    .chat-input {
        display: flex;
        padding: 10px;
        background: white;
        border-top: 1px solid #ddd;
    }

        .chat-input input[type="text"] {
            flex: 1;
            padding: 12px;
            border-radius: 25px;
            border: 1px solid #ccc;
            outline: none;
        }

        .chat-input button {
            margin-left: 10px;
            padding: 0 18px;
            border-radius: 50%;
            border: none;
            background: #4CAF50;
            color: white;
            font-size: 18px;
            cursor: pointer;
        }

    .user-list li {
        position: relative; 
        padding: 12px;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.2s;
    }

        .user-list li .unread-badge {
            position: absolute;
            top: 8px;
            right: 10px;
            width: 10px;
            height: 10px;
            background: red;
            border-radius: 50%;
            display: none;
        }

    #chatTitle {
        font-size: 18px;
        cursor: pointer;
    }

    .message.outcoming {
        background-color: blue;
    }

    .message.incoming {
        background-color: blue;
    }

</style>


<div class="chat-container">

    <aside class="sidebar">
        <div class="sidebar-header">Online Kullanıcılar</div>
        <ul id="onlineUsersList" class="user-list"></ul>

        <div class="sidebar-header" style="margin-top: 20px;">Sohbetler</div>
        <ul id="chatList" class="user-list"></ul>
    </aside>


    <section class="chat-panel">

        <header class="chat-header">
            <div>
                <strong id="chatTitle">Genel Sohbet</strong><br />
                <small id="typingStatus"></small>
            </div>
        </header>

        <main id="chatMessages" class="chat-messages"></main>

        <footer class="chat-input">
            <input type="hidden" id="selectedUser" />
            <input type="text" id="messageInput" placeholder="Mesaj yaz..." />
            <button id="sendMessage">➤</button>
        </footer>

    </section>
</div>
<script src="~/js/chat-ui.js"></script>
